<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">
    <ImageView
        android:id="@+id/item_score_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/item_score_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/item_score_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_score_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/item_score_image"
        app:layout_constraintTop_toBottomOf="@+id/item_score_username" />

    <TextView
        android:id="@+id/item_score_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/item_score_image"
        app:layout_constraintTop_toBottomOf="@id/item_score_value" />

</androidx.constraintlayout.widget.ConstraintLayout>